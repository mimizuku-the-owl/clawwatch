{
  "name": "clawwatch",
  "description": "Agent monitoring, cost control, and alerting for Clawdbot and OpenClaw agents",
  "type": "module",
  "private": true,
  "workspaces": ["apps/clawwatch", "packages/core", "tooling/typescript"],
  "scripts": {
    "dev": "bun run --filter='clawwatch-app' dev",
    "build": "bun run --filter='clawwatch-app' build",
    "serve": "bun run --filter='@clawwatch/core' serve",
    "collector": "bun run --filter='@clawwatch/core' collector",
    "clean": "git clean -xdf node_modules dist",
    "typecheck": "bun run --filter '*' typecheck",
    "style:fix": "nix fmt ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
